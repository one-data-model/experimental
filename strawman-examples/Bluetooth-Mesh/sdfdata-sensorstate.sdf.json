{
  "info": {
    "title": "Example BT Mesh Sensor State Model", 
    "version": "20201111", 
    "copyright": "Copyright 2019 Michael Koster. All rights reserved.", 
    "license": "https://github.com/one-data-model/oneDM/blob/master/LICENSE"
  }, 
  "namespace": {
    "ex": "https://onedm.org/exploratory/"
  }, 
  "defaultNamespace": "ex", 

  "sdfData": {
    "SensorDescriptor": {
      "type": "object",
      "properties": {
        "SensorPropertyID": {
          "sdfRef": "#/sdfData/PropertyIdType"
        }, 
        "SensorPositiveTolerance": {
          "type": "number", 
          "multipleOf": 1, 
          "minimum": 1, 
          "maximum": 4095
        }, 
        "SensorNegativeTolerance": {
          "type": "number", 
          "multipleOf": 1, 
          "minimum": 1, 
          "maximum": 4095
        }, 
        "SensorSamplingFunction": {
          "sdfEnum": {
            "Unspecified": {}, 
            "Instantaneous": {}, 
            "ArithmeticMean": {}, 
            "RMS": {}, 
            "Maximum": {}, 
            "Minimum": {}, 
            "Accumulated": {}, 
            "Count": {}
          }
        }, 
        "SensorMeasurementPeriod": {
          "type": "number", 
          "multipleOf": 1, 
          "minimum": 1, 
          "maximum": 255
        }, 
        "SensorUpdateInterval": {
          "type": "number", 
          "multipleOf": 1, 
          "minimum": 1, 
          "maximum": 255
        }
      }
    }, 
    "SensorSetting": { 
      "type": "object",
      "properties": {
        "SensorPropertyID": {
          "sdfRef": "#/sdfData/PropertyIdType"
        }, 
        "SensorSettingPropertyID": {
          "sdfRef": "#/sdfData/PropertyIdType"
        }, 
        "SensorSettingAccess": {
          "sdfEnum": {
            "read": {}, 
            "readwrite": {}
          }
        }, 
        "SensorSettingRaw": {
          "sdfRef": "#/sdfData/SensorSetting/properties/SensorSettingRawValueType"
        },
        "SensorSettingRawValueType": {
          "description": "any type defined by the sensor"
        }
      }
    }, 
    "SensorCadence": {
      "type": "object",
      "properties": {
        "SensorPropertyID": {
          "sdfRef": "#/sdfData/PropertyIdType"
        }, 
        "FastCadencePeriodDivisor": {
          "type": "number", 
          "minimum": 0, 
          "maximum": 15
        }, 
        "StatusTriggerType": {
          "sdfEnum": { 
            "formattype": {
              "description": "Format Type Trigger"
            }, 
            "unitless": {
              "description": "Unitless Trigger"
            } 
          }
        }, 
        "StatusTriggerDeltaDown": {
          "type": "number"
        }, 
        "StatusTriggerDeltaUp": {
          "type": "number"
        }, 
        "StatusMinInterval": {
          "type": "number", 
          "multipleOf": 1, 
          "minimum": 0, 
          "maximum": 26
        }, 
        "FastCadenceLow": {
          "type": "number"
        }, 
        "FastCadenceHigh": {
          "type": "number"
        }
      }
    },
    "SensorData": {
      "type": "object",
      "properties": {
        "SensorDataType": {
          "type": "array", 
          "items": [
            {
              "type": "array", 
              "items": [
                {
                  "sdfRef": "#/sdfData/PropertyIdType"
                }, 
                {
                  "sdfRef": "#/sdfData/SensorData/properties/SensorDataRawValueType"
                }
              ]
            }
          ]
        }, 
        "SensorDataRawValueType": {
          "description": "any type defined by the sensor"
        }
      }
    },
    "PropertyIdType": {
      "type": "number", 
      "multipleOf": 1, 
      "minumum": 1, 
      "maximum": 65535
    }
  }
}
