  "namespace": {
    "ex": "https://onedm.org/exploratory/#",
    "pg": "https://onedm.org/playground/#"
  }, 
  "defaultNamespace": "ex", 

  "sdfObject": {
    "ovenOperatingState": {
      "label": "Oven Operating State",
      "sdfRequired": [
        "#/sdfObject/ovenOperatingState/sdfProperty/machineState",
        "#/sdfObject/ovenOperatingState/sdfProperty/supportedMachineStates",
        "#/sdfObject/ovenOperatingState/sdfAction/setMachineState"
      ],
      "sdfProperty": {
        "machineState": {
          "type": "string", 
          "enum": [ "ready", "running", "paused" ]
        },
        "supportedMachineStates": {
          "type": "array",
          "items": {
            "enum": [ "ready", "running", "paused" ]
          }
        },
        "ovenJobState": {
          "type": "string",
          "enum": [
            "cleaning",
            "cooking",
            "cooling",
            "draining",
            "preheat",
            "ready",
            "rinsing"
          ]
        },
        "completionTime": {
          "sdfRef": "pg:/sdfData/iso8601date"
        },
        "operationTime": {
          "sdfRef": "pg:/sdfData/PositiveInteger"
        },
        "progress": {
          "sdfRef": "pg:/sdfData/IntegerPercent"
        }
      }, 
      "sdfAction": {
        "setMachineState": { 
          "sdfRequiredInputData": [
            "#/sdfObject/ovenOperatingState/sdfAction/setMachineState/sdfInputData/properties/ovenMode"
          ],          
          "sdfInputData": {
            "type": "object",
            "properties": {
              "ovenMode": {
                "sdfRef": "ex:/sdfData/OvenMode"
              }
            }
          }
        },
        "stop": {},
        "start": {
          "sdfInputData": {            
            "type": "object",
            "properties": {
              "ovenMode": {
                "sdfRef": "ex:/sdfData/OvenMode"
              }
            }
          }
        }
      }
    }
  }
}
